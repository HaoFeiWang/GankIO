<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">
    <TextView
        android:id="@+id/study_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="15sp"
        android:text="学习资讯文章的标题或概要" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/study_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:drawableLeft="@drawable/ic_item_study_type_android"
            android:drawablePadding="3dp"
            android:text="Android"/>
        <TextView
            android:id="@+id/study_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:drawableLeft="@drawable/ic_item_study_who"
            android:drawablePadding="3dp"
            android:text="作者"/>
        <TextView
            android:id="@+id/study_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:textSize="11sp"
            android:drawableLeft="@drawable/ic_item_styde_time"
            android:drawablePadding="3dp"
            android:text="时间"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
</LinearLayout>